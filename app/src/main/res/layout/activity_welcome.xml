<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg_skeuo"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/welcome_panel_skeuo"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:shadowColor="#55FFFFFF"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.8"
                android:text="Whasap 2"
                android:textColor="#1E252D"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:gravity="center"
                android:text="Acceso seguro clásico"
                android:textColor="#3C4653"
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/welcome_divider_skeuo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="2dp"
                android:text="Aviso y descargo de responsabilidad:\n\nEsta app no está afiliada, asociada ni respaldada por Discord.\n\nTu token se almacena localmente en este dispositivo para poder acceder a tus chats desde la aplicación. Aunque no se envía intencionalmente a terceros fuera de la conexión con Discord, debes protegerlo como si fuera una contraseña.\n\nEl uso de esta app es bajo tu exclusiva responsabilidad. El uso indebido del token puede implicar riesgos de seguridad o pérdida de acceso a tu cuenta. Los desarrolladores no se hacen responsables por pérdida de datos, daños directos o indirectos derivados del uso de la app."
                android:textColor="#2E3946"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Token de Discord"
                android:textColor="#1E252D"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:background="@drawable/welcome_input_skeuo"
                android:hint="Pega aquí tu token de Discord"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#111111"
                android:textColorHint="#7A8694" />

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/welcome_button_skeuo"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#66000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.7"
                android:text="Conectar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:background="@drawable/welcome_button_help_skeuo"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Ayuda"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_error_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#B10000"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Error: conexión fallida" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Versión 1.0"
            android:textColor="#A8B0BB"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>
