<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#5A5A5A"
                android:centerColor="#2D2D2D"
                android:endColor="#121212" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#080808" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>
