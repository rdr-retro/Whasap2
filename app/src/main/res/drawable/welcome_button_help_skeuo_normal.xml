<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#737C87"
                android:centerColor="#59616B"
                android:endColor="#3A4048" />
            <corners android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="#2D323A" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#30FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>
