<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#AFB7C3" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#FFFFFF"
                android:endColor="#E6EBF2" />
            <corners android:radius="7dp" />
            <stroke
                android:width="1dp"
                android:color="#8A95A5" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp" />
        </shape>
    </item>
</layer-list>
