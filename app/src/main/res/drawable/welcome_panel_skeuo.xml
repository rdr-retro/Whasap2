<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#F0F3F7"
                android:centerColor="#DDE2E9"
                android:endColor="#C2C9D3" />
            <corners android:radius="14dp" />
            <stroke
                android:width="1dp"
                android:color="#7E8898" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="13dp" />
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF" />
        </shape>
    </item>

    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="40dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#36FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
