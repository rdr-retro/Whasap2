<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow (deep skeuomorphic drop shadow) -->
    <item android:left="1dp" android:top="1dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#88888888"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Inner highlight (top-left light bevel) -->
    <item android:bottom="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDFFFFFF"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Glassmorphism body: semi-transparent gradient with border -->
    <item android:bottom="2dp" android:right="2dp" android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#CCEEEEEE"
                android:centerColor="#BBE8E8E8"
                android:endColor="#AADDDDDD"
                android:angle="135"/>
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="#66FFFFFF"/>
        </shape>
    </item>
    <!-- Inner inset glow -->
    <item android:bottom="3dp" android:right="3dp" android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#22FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</layer-list>
